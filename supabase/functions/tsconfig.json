{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "isolatedModules": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "./**/*.ts",
        "./deno.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}